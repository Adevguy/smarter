<!DOCTYPE html>
<html lang="<%= lang === 'ar' ? 'ar' : 'en' %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
    />
      <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/products.css" />
    <link rel="stylesheet" href="/navbar.css" />
  </head>
  <body dir="<%= lang === 'ar' ? 'rtl' : 'ltr' %>">
    <%-include("navbar")%>
    <div class="container">
      <!-- Header -->
      <div
        class="header-rectangle w-100 p-4 mt-5 rounded-4"
        style="background-color: #ef6341"
      >
        <div class="row align-items-center text-center text-md-<%=lang === "ar" ? "end" : "start"%>">
          <div class="col-md-6">
            <h2 class="display-5 text-white fw-bold"><%= t.cups %></h2>
            <p class="text-white fs-5"><%= t.productsSubtitle %></p>
          </div>
          <div class="col-md-6 text-center mt-3 mt-md-0">
            <img src="/black_cup.png" alt="cup" class="img-fluid header-img <%=lang === "ar"? "" : "right"%>" />
          </div>
        </div>
      </div>

      <!-- Products -->
      <div class="products mt-5">
        <%for(let product of products){%>
        <div class="product mt-5">
          <div class="row g-4">
            <!-- Product Image -->
            <div class="col-md-6 col-12 text-center">
              <img
                src="/<%=product.image%>"
                class="img-fluid products-img"
                alt="product image"
              />
            </div>

            <!-- Product Info -->
            <div class="col-md-6 col-12">
              <!-- نوع المنتج -->
              <div class="row mb-4">
                <div class="col-6 text-white">
                  <p class="fs-5 fw-bolder"><%= t.type %></p>
                  <p class="info-text fw-bold"><%=product.type%></p>
                </div>
                <div
                  class="col-6 d-flex align-items-center justify-content-center"
                >
                  <img
                    class="recycle-img ms-2"
                    src="/recycle.svg"
                    alt="recycle"
                  />
                  <p class="text-white fw-bolder fs-5 mb-0">
                    <%=product.material%>
                  </p>
                </div>
              </div>

              <!-- الكمية -->
              <div class="row mb-4">
                <div class="col-6 text-white">
                  <p class="fs-5 fw-bolder"><%= t.piece %></p>
                  <p class="info-text fw-bold"><%=product.quantity%></p>
                </div>
                <div class="col-6 text-white">
                  <p class="fs-5 fw-bolder"><%= t.packagedCarton %></p>
                  <p class="info-text fw-bold"><%=product.cartoonSize%></p>
                </div>
              </div>

              <!-- السعة -->
              <div class="row mb-4">
                <div class="col-12 text-white">
                  <p class="fs-5 fw-bolder"><%= t.capacity %></p>
                  <div class="row text-center g-2">
                    <%for(let size of product.size){%>
                    <div class="col-6 col-sm-3">
                      <p class="info-text fw-bold"><%=size%></p>
                    </div>
                    <%}%>
                  </div>
                </div>
              </div>

              <!-- رقم الصنف -->
              <div class="row">
                <div class="col-12 text-white">
                  <p class="fs-5 fw-bolder"><%= t.itemNumber %></p>
                  <div class="row text-center g-3 justify-content-center">
                    <% for(let i = 0; i < product.id.length; i++){ %>
                    <div class="col-6 col-md-3 size-col text-center">
                      <p class="info-text fw-bold">
                        <%= product.id[i] || "غير متوفر" %>
                      </p>
                      <p class="info-text fw-bold"><%= product.packing[i] %></p>
                      <img
                        src="/<%=product.image%>"
                        class="img-fluid size-img <%=lang === "ar"? "": "leftt"%>"
                        alt="cup"
                      />
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>

              <div class="row mb-4">
                <div class="col-3 text-white">
                  <img class="recycle-img" src="/warning.svg" />
                </div>
                <div class="col-9 text-white">
                  <p class="fs-5 fw-bolder d-inline">
                    <%= t.lightweightPortable %>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Product Separator -->
          <div
            class="mx-auto mt-5"
            style="
              width: 80%;
              height: 3px;
              background-color: #ef6341;
              border-radius: 2px;
            "
          ></div>
        </div>
        <!-- end of .product -->
        <%}%>
      </div>
      <!-- end of .products -->

      <!-- Image Gallery Slider -->
      <div class="gallery-section mt-5 mb-5">
        <h2 class="text-white text-center mb-4 fw-bold"><%= lang === 'ar' ? 'معرض الصور' : 'Image Gallery' %></h2>
        <div id="imageCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% 
            const allImages = [];
            products.forEach(product => {
              allImages.push(product.image);
            });
            
            // Create slides with 3 images each
            const imagesPerSlide = 3;
            const slides = [];
            for(let i = 0; i < allImages.length; i += imagesPerSlide) {
              slides.push(allImages.slice(i, i + imagesPerSlide));
            }
            %>
            
            <% slides.forEach((slide, index) => { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
              <div class="row g-3 justify-content-center">
                <% slide.forEach(image => { %>
                <div class="col-lg-4 col-md-6 col-12">
                  <div class="gallery-item">
                    <img src="/<%= image %>" class="img-fluid gallery-img" alt="Product Gallery">
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
            <% }) %>
          </div>
          
          <!-- Carousel controls -->
          <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
          
          <!-- Indicators -->
          <div class="carousel-indicators">
            <% slides.forEach((slide, index) => { %>
            <button type="button" data-bs-target="#imageCarousel" data-bs-slide-to="<%= index %>" 
                    class="<%= index === 0 ? 'active' : '' %>" aria-current="<%= index === 0 ? 'true' : 'false' %>" 
                    aria-label="Slide <%= index + 1 %>"></button>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
        <%-include("footer")%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
