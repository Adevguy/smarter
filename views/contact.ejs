<!DOCTYPE html>
<html lang="<%= lang === 'ar' ? 'ar' : 'en' %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link
      href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/contact.css" />
  </head>
  <body dir="<%= lang === 'ar' ? 'rtl' : 'ltr' %>">
    <%-include("navbar")%>
<section id="hero" class="hero-section">
  <div class="hero-background">
    <img src="/contact.png" alt="Decorative background image of bread">
  </div>
  <div class="container hero-content">
    <h1 class="hero-title <%=lang === "ar" ? "right": ""%>"><%= t.contactUsNow %></h1>
    <p class="hero-subtitle <%=lang === "ar" ? "right": ""%>"><%= t.contactSubtitle %></p>
    <hr class="hero-divider">
  </div>
</section>
<section id="contact" class="contact-section">
  <div class="container contact-container">
    <div class="contact-image-wrapper">
      <div class="image-bg-deco"></div>
      <img src="/contact1.png" alt="Branded packaging and products" class="contact-main-image">
    </div>
    <div class="contact-form-wrapper">
      <h2 class="form-title"><%= t.contactUs %></h2>
      <form class="contact-form" method="post" action="/send-email">
        <div class="form-group">
          <input type="text" id="name" name="name" class="form-input" placeholder="<%= t.name %>">
        </div>
        <div class="form-group">
          <input type="email" id="email" name="email" class="form-input" placeholder="<%= t.email %>">
        </div>
        <div class="form-group">
          <input type="tel" id="phone" name="phoneNumbe" class="form-input" placeholder="<%= t.phone %>">
        </div>
        <div class="form-group select-wrapper">
          <select id="product" name="product" class="form-input">
            <option value="" disabled selected><%= t.product %></option>
            <%console.log(products)%>
            <%for(let product of products){%>
              <option value="<%=product%>"><%=product%></option>
              
              <%}%>
          </select>
        </div>
        <div class="form-group">
          <textarea id="message" name="message" class="form-textarea" placeholder="<%= t.message %>"></textarea>
        </div>
        <button dir="rtl" type="submit" class="submit-button" style="margin-bottom: 50px;">
          <span><%= t.send %><img src="/arrow1.svg" alt=""></span>
        </button>
      </form>
    </div>
  </div>
</section>
<section id="info" class="info-section" style="margin-bottom: 50px;">
  <div class="container">
    <h2 class="info-title"><%= t.contactInfo %></h2>
    <div class="info-items-container">
      <div class="info-item">
        <!--merged image-->
        <div class="icon-wrapper">
          <img src="/orangeLocation.svg" alt="Location svg" class="icon-bg">
        </div>
        <p class="info-text">Turkey</p>
      </div>
      <div class="info-item">
        <!--merged image-->
        <div class="icon-wrapper">
          <img src="/orangeEmail.svg" alt="Email svg" class="icon-bg">
        </div>
        <a href="mailto:example@email.com" class="info-text">example@email.com</a>
      </div>
      <div class="info-item">
        <!--merged image-->
        <div class="icon-wrapper">
          <img src="/orangePhone.svg" alt="Orange Phone" class="icon-bg">
        </div>
        <a href="tel:+20XXXXXXXX" class="info-text">+20 XXXXXXXXX</a>
      </div>
    </div>
  </div>
</section>
<%-include("footer")%>
</body>
</html>
