  <script>

  // 3D parallax effect on mouse move
const heroImg = document.querySelector(".hero-image img");
document.addEventListener("mousemove", (e) => {
  const x = (window.innerWidth / 2 - e.pageX) / 40;
  const y = (window.innerHeight / 2 - e.pageY) / 40;
  heroImg.style.transform = `rotateX(${y}deg) rotateY(${x}deg)`;
});

// Reset when mouse leaves
document.addEventListener("mouseleave", () => {
  heroImg.style.transform = "rotateX(0deg) rotateY(0deg)";
});

// Scroll animation for services section
function handleServiceCards() {
  const cards = document.querySelectorAll('.service-card');
  cards.forEach(card => {
    const rect = card.getBoundingClientRect();
    if (rect.top < window.innerHeight - 60 && rect.bottom > 60) {
      card.classList.add('in-view');
    } else {
      card.classList.remove('in-view');
    }
  });
}
window.addEventListener('scroll', handleServiceCards);
window.addEventListener('DOMContentLoaded', handleServiceCards);

// Scroll animation for our work section
function handleOurWorkGallery() {
  const items = document.querySelectorAll('.our-work-gallery .gallery-item');
  items.forEach(item => {
    const rect = item.getBoundingClientRect();
    if (rect.top < window.innerHeight - 60 && rect.bottom > 60) {
      item.classList.add('in-view');
    } else {
      item.classList.remove('in-view');
    }
  });
}
window.addEventListener('scroll', handleOurWorkGallery);
window.addEventListener('DOMContentLoaded', handleOurWorkGallery);

// Scroll animation for product cards
function handleProductCards() {
  const cards = document.querySelectorAll('.product-card');
  cards.forEach(card => {
    const rect = card.getBoundingClientRect();
    if (rect.top < window.innerHeight - 60 && rect.bottom > 60) {
      card.classList.add('in-view');
    } else {
      card.classList.remove('in-view');
    }
  });
}
window.addEventListener('scroll', handleProductCards);
window.addEventListener('DOMContentLoaded', handleProductCards);

// Scroll to services section when clicking the services link in navbar
const servicesBtn = Array.from(document.querySelectorAll('.navbar-lin')).find(btn => btn.textContent.trim() === 'خدماتنا');
if (servicesBtn) {
  servicesBtn.addEventListener('click', function(e) {
    e.preventDefault();
    const section = document.getElementById('services');
    if (section) {
      section.scrollIntoView({ behavior: 'smooth' });
    }
  });
}
  
  </script>
</body>
