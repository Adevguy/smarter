<section id="footer-section">
  <footer class="site-footer" id="footer" dir="<%= lang === 'ar' ? 'rtl' : 'ltr' %>">
    <div class="page-wrapper">
      <div class="footer-container">

        <hr class="footer-divider">
        <div class="footer-bottom">
          <div class="footer-left">
            <a href="/"><img src="/logo.png" alt="Smart Ller logo" class="footer-logo"></a>
            <nav class="footer-nav">
              <ul>
                <li><a href="/about" style="text-decoration: none;"><%= t.aboutUsFooter %></a></li>
                <li><a href="/categories" style="text-decoration: none;"><%= t.ourProductsFooter %></a></li>
                <li><a href="/contact" style="text-decoration: none;"><%= t.contactUsFooter %></a></li>
              </ul>
            </nav>
          </div>
          <div class="footer-social">
            <h3 class="footer-heading" style="text-align: center;"><%= t.socialCommunication %></h3>
            <div class="social-icons">
              <a href="https://www.facebook.com/smartpaper.ksa" aria-label="Facebook"><img src="/facebook.svg" alt="Facebook"></a>
              <a href="https://www.tiktok.com/@smartpaper.ksa" aria-label="tiktok"><img src="/tik.svg" alt="Telegram"></a>
              <a href="https://www.instagram.com/smartpaper.ksa" aria-label="Instagram"><img src="/insta.svg" alt="Instagram"></a>
              <a href="https://x.com/smartpaperksa" aria-label="Twitter"><img src="/x.svg" alt="Twitter"></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </footer>
</section>

<style>
    .site-footer {
    background-color: #ef6341;
    margin-top: -1px; /* To ensure overlap with blue background if needed */
    padding-bottom: 40px;
  }

  .footer-container {
    display: flex;
    flex-direction: column;
  }

  .footer-top {
    display: flex;
    justify-content: center;
    padding: 20px 80px 0;
  }

  .contact-message {
    font-size: 24px;
    font-weight: 600;
    color: #ffffff;
    margin: 0;
    text-align: center;
  }

  .footer-logo {
    width: 160px;
    height: 110px;
    margin-right: 40px;
  }

  .footer-divider {
    width: 80%;
    max-width: 800px;
    border: 0;
    border-top: 1px solid #ffffff;
    margin: 20px auto 30px;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 0 100px;
  }

  .footer-left {
    display: flex;
    align-items: center;
  }

  .footer-nav ul {
    list-style-type: disc;
    padding-left: 20px;
  }

  .footer-nav ul li {
    margin-bottom: 15px;
    color: #ffffff;
  }

  .footer-nav ul li::marker {
    color: #ffffff;
  }
  
  .footer-nav ul li:last-child {
    margin-bottom: 0;
  }

  .footer-nav a,
  .footer-heading {
    font-size: 20px;
    font-weight: 600;
    color: #ffffff;
  }
  
  .footer-nav a:hover {
    opacity: 0.8;
  }

  .footer-heading {
    margin: 0 0 15px;
  }

  .social-icons {
    display: flex;
    gap: 40px;
  }

  .social-icons a {
    transition: transform 0.3s ease;
  }

  .social-icons a:hover {
    transform: scale(1.1);
  }

  .social-icons img {
    width: 30px;
    height: 30px;
  }

  @media (max-width: 1200px) {
    .footer-bottom {
      padding: 0 80px;
    }
    .footer-logo {
      width: 180px;
      height: 125px;
      margin-right: 50px;
    }
    .footer-nav a,
    .footer-heading,
    .contact-message {
      font-size: 22px;
    }
    .social-icons {
      gap: 45px;
    }
    .social-icons img {
      width: 32px;
      height: 32px;
    }
  }

  @media (max-width: 992px) {
    .footer-bottom {
      flex-direction: column;
      align-items: center;
      gap: 40px;
      text-align: center;
    }
    .footer-left {
      flex-direction: column;
      align-items: center;
      gap: 30px;
    }
    .footer-logo {
      width: 200px;
      height: 140px;
      margin-right: 0;
    }
    .footer-nav a,
    .footer-heading,
    .contact-message {
      font-size: 24px;
    }
    .social-icons {
      justify-content: center;
      gap: 50px;
    }
    .social-icons img {
      width: 35px;
      height: 35px;
    }
    .site-footer {
      padding-bottom: 50px;
    }
  }

  @media (max-width: 768px) {
    .footer-top,
    .footer-bottom {
      padding: 0 40px;
    }
    .footer-left {
      gap: 20px;
    }
  }
  
  @media (max-width: 576px) {
    .footer-top,
    .footer-bottom {
      padding: 0 20px;
    }
    .social-icons {
      gap: 30px;
      img{
        width: 25px;
      }
    }
    .footer-nav a {
      font-size: 16px;
    }
  }
</style>

